<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.song.transitiondemo.activity.ContentAndSharedTransitionActivity">

    <!--toolBar-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="5dp">

        <TextView
            android:id="@+id/tv_toolsBar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fragment和Activity切换动画"
            android:textSize="16sp" />

    </android.support.v7.widget.Toolbar>

    <!--FragmentTransition-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:onClick="clickFragment"
        app:cardCornerRadius="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="FragmentTransition" />

    </android.support.v7.widget.CardView>

    <!--ActivityTransition-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:onClick="shareInActivity"
        app:cardCornerRadius="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:id="@+id/iv_element"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_element"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="withShareInActivity" />

    </android.support.v7.widget.CardView>

</LinearLayout>
