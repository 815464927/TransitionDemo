<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.song.transitiondemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.scene.SceneActivity" />
        <activity android:name=".activity.scene.SceneBoundsActivity" />
        <activity android:name=".activity.scene.SceneTransfromActivity" />
        <activity android:name=".activity.scene.ChangeclipBoundsActivity" />
        <activity android:name=".activity.scene.ChangeImageTransfromActivity" />
        <activity android:name=".activity.scene.FadeSlideExplodeActivity" />
        <activity android:name=".activity.BeginDelayActivity" />
        <activity android:name=".activity.ContentTransitionActivity" />
        <activity android:name=".activity.ContentAndSharedTransitionActivity" />
        <activity android:name=".fragment.FragmentTransitionActivity" />
        <activity android:name=".activity.SharedElementTransitionsActivity"></activity>
    </application>

</manifest>